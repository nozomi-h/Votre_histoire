<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-6">
      <% <% @items.each do |item| %>
        <%= item[:genre_name] %>

        <div class="space_box"></div>

        <div class="genre_item clearfix">
          <div class="genre_item_img">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, format:'jpeg', fallback: "no_image.jpg", size: "150x200", class: "image" %>
            <% end %>
          </div>

          <div class="genre_item_name">
            <%= link_to "#{item.prodct_name}",item_path(item.id), class: "link-text" %>
          </div>
          <div class="genre_item_price">
            <%= item.tax_include.round(0) %>円(税込)
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
