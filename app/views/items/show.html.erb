<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-4">
      <div class="box clearfix">
        <div class="item_show_image">
          <%= attachment_image_tag @item, :image, size: '300x300', fallback: 'no_image.jpg' %>
        </div>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="box clearfix">
        <div class="item_show_name">
          <%= @item.prodct_name %>
        </div>
        <div class="item_show_price">
          <%= @item.tax_include.round(0) %>円(税込)
        </div>
        <div class="item_show_favorite">
          <div class="favorite-button-<%=@item.id %>">
            <%#= render 'favorites/favorite', item: @item %>
          </div>
        </div>
        <% @items.each do |item| %>
          <div class="item_cart">
            <div class="item_size">
              <%= item.item_color_size.size %>
            </div>
            <div class="cart_presence">
              <% if item.status_before_type_cast == 0 %>
                <%= button_tag type: "submit", class: "btn btn-primary" do %>
                  <p>ADD TO CART</p>
                <% end %>
              <% else %>
                <%= button_tag type: "submit", disabled: true, class: "btn btn-primary", style: "background-color: pink; border-color: pink; padding-right: 10px;" do %>
                  <p style="font-size: 16px; font-style: bold; padding-top: 10px; margin: 0 auto;">SOLD OUT</p>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="item_material">
          <p>【 素材 】</p>
          <div class="material_date">
            <%= @item.material %>
          </div>
        </div>
        <div class="size_table">
          <% @items.each do |item| %>
            <%= item.size(genre_name:genre) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
