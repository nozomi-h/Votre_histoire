<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-9">
      <div class="space_box"></div>
      <div class="line_box_long"></div>
      <div class="title">SEARCH RESULTS</div>
      <div class="line_box_long"></div>

      <% @items.each do |item| %>
        <div class="genre_item clearfix">
          <div class="genre_item_img">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, format:'jpeg', fallback: "no_image.jpg", size: "200x300", class: "image" %>
            <% end %>
          </div>
          <div class="genre_item_name">
            <%= link_to "#{item.prodct_name}",item_path(item.id) %>
          </div>
          <div class="genre_item_price">
            ¥<%= item.price %> + 税
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
