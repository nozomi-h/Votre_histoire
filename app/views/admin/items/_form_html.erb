<div class="colors">
  <%= form.fields_for :colors do |f| %>
    <%= f.label "COLOR" %>
    <%= render "color_fields", f: f %>
  <% end %>
  <div class="links">
    <%= link_to_add_association "ADD TO COLOR", form, :colors %>
  </div>
</div>

