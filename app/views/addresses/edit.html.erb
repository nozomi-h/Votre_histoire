<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-9">
      <div class="space_box"></div>
      <div class="line_box_long"></div>
      <div class="title">EDIT ADDRESS</div>
      <div class="line_box_long"></div>

      <%# ネストさせている時のform_forは[親,子]と記述する %>
      <%= form_for [current_user, @address] do |f| %>
        <%#= render error %>

        <div class="center">

        <div class="field">
          <p>氏名<span class="required">必須</span></p>
            <%= f.label :　姓　 %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :size => "27*27" %>
            <%= f.label :　名　 %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :size => "27*27" %>
        </div>

        <div class="field">
          <p>カナ<span class="required">必須</span></p>
            <%= f.label :　セイ %>
            <%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name", :size => "27*27" %>
            <%= f.label :　メイ %>
            <%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name", :size => "27*27" %>
        </div>

        <div class="field">
          <p>連絡先電話番号<span class="required">必須</span></p>
            <%= f.telephone_field :tel_number, autofocus: true, autocomplete: "tel_number", :size => "70*70" %>
        </div>

        <div class="field">
          <p>郵便番号<span class="required">必須</span></p>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :size => "30*30" %>
            <p>(半角英数) 例1000101  ※郵便番号がわからない場合は
            <%=link_to "こちら", "https://www.post.japanpost.jp/smt-zipcode/" %>
            </p>
        </div>

        <div class="field">
          <p>都道府県<span class="required">必須</span></p>
            <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", :size => "70*70" %>
        </div>

        <div class="field">
          <p>市区町村・番地<span class="required">必須</span></p>
            <%= f.text_field :city_address, autofocus: true, autocomplete: "city_address", :size => "70*70" %>
        </div>

        <div class="field">
          <p>マンション名　等</p>
            <%= f.text_field :building, autofocus: true, autocomplete: "building", :size => "70*70" %>
        </div>

        <div class="user-edit">
          <%= link_to "戻る", user_addresses_path(current_user.id), :class => "btn btn-default col-xs-4 col-xs-offset-1" %>
          <%= f.submit "変更する", :class => "btn btn-default col-xs-4 col-xs-offset-2" %>
        </div>

        </div>
      <% end %>
    </div>
  </div>
</div>

