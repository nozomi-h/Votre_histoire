<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-9">
      <div class="space_box"></div>
      <div class="line_box_long"></div>
      <div class="title">ADD ADDRESS</div>
      <div class="line_box_long"></div>

      <div class="space"></div>

      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">

          <%= form_for(@address, url: new_user_address_path(current_user.id)) do |f| %>

            <div class="field">
              <p>氏名　　　　　<span class="required">必須</span>
                &ensp;&ensp;姓
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :size => "30*30" %>
                &ensp;&ensp;名
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :size => "30*30" %>
              </p>
            </div>

            <div class="field">
              <p>カナ　　　　　<span class="required">必須</span>
                セイ
                <%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name", :size => "30*30" %>
                メイ
                <%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name", :size => "30*30" %>
              </p>
            </div>

            <div class="field">
              <p>連絡先電話番号 <span class="required">必須</span>
                <%= f.telephone_field :tel_number, autofocus: true, autocomplete: "tel_number", :size => "70*70" %>
              </p>
            </div>

            <div class="field">
              <p>郵便番号　　　<span class="required">必須</span>
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :size => "30*30" %><br>
                <span class="postal_code">(半角英数) 例1000101  ※郵便番号がわからない場合は
                <%=link_to "こちら", "https://www.post.japanpost.jp/smt-zipcode/" %></span>
              </p>
            </div>

            <div class="field">
              <p>都道府県　　　 <span class="required">必須</span>
                <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", :size => "70*70" %>
              </p>
            </div>

            <div class="field">
              <p>市区町村・番地 <span class="required">必須</span>
                <%= f.text_field :city_address, autofocus: true, autocomplete: "city_address", :size => "70*70" %>
              </p>
            </div>

            <div class="field">
              <p>マンション名　等　　
                <%= f.text_field :building, autofocus: true, autocomplete: "building", :size => "70*70" %>
              </p>
            </div>

            <div class="space"></div>

            <div class="actions">
              <%= f.submit "登録する", :class => "btn btn-primary col-xs-10 col-xs-offset-1" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
