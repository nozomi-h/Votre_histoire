<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-9">

      <%# --ユーザーの名前-- %>
      <div class="user-name">
        <p class="current-user">
          <%= @user.last_name %><%= @user.first_name %>　様
        </p>
      </div>


      <div class="space">お買い物情報</div>
      <div class="line_box_pink"></div>

      <div class="space">　お気に入り</div>
      <div class="line_box_gray"></div>

      <%# --お気に入り情報をここに記述-- %>
      <% @favorites.each do |favorite| %>
        <div class="favorite_items">
          <%= attachment_image_tag favorite.item, :image, format:'jpeg', fallback: "no_image.jpg", size: '150x150' %>
        </div>
          <%= link_to "#{favorite.item.prodct_name}",item_path(favorite.item.id), style: "color: white;" %>
          ¥<%= favorite.item.price %> (税込)
      <% end %>

      <div class="user-edit">
        <%= link_to 'お気に入り一覧へ', user_favorites_path(@user.id), class:'btn btn-default col-xs-5 col-xs-offset-7' %>
      </div>


      <div class="border">
        <div class="space">　購入履歴</div>
        <div class="line_box_gray"></div>

        <%# --購入履歴をここに記述-- %>
        <table class="table-date table-bordered">
          <tr>
            <th>▼<%#= @order.created_at.strftime('%Y/%m/%d') %>
                ご注文<%#= link_to '(詳細へ)', order_path(order.id) %>
            </th>
          </tr>
        </table>

        <table class="table-content table-bordered" width="100%">
          <tr>
            <th>ご注文番号</th>
            <th>ご注文内容</th>
            <th>ご注文金額合計</th>
            <th>お支払方法</th>
            <th>配送状況</th>
          </tr>

          <% @orders.each do |order| %>
            <tr>
              <td width="20%"><%= order.order_number %></td>
              <td width="40%"><%= order.order_items.first.item.prodct_name %>
              <% if order.amount_except_one != 0  %>ほか<%= order.amount_except_one %>点...<% end %></td>
              <td width="20%"><%= order.item.purchase_price %></td>
              <td width="10%"><%= order.payment %></td>
              <td width="10%"><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </table>
        <%# != とは、等しくない という意味 %>

        <div class="user-edit">
          <%= link_to '購入履歴一覧へ', orders_path(@user_id), class:'btn btn-default col-xs-5 col-xs-offset-7' %>
        </div>
      </div>


      <div class="space">お客様情報</div>
      <div class="line_box_pink"></div>

      <%# --会員情報をここに記述-- %>
      <%# table-borderedはボーダー（ラインの表示） %>
      <table class="table-content table-bordered">
        <tr><%# thの横にtdがくる形式のtableの書き方 %>
          <th>氏名</th>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @user.last_kana_name %><%= @user.first_kana_name %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @user.prefecture %><%= @user.city_address %><%= @user.building %></td>
        </tr>
        <tr>
          <th>連絡先電話番号</th>
          <td><%= @user.tel_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>

      <div class="user-edit">
        <%= link_to "変更する", edit_user_path(@user.id), class:'btn btn-default col-xs-5' %>
        <%= link_to "住所一覧へ", user_addresses_path(current_user.id), class:'btn btn-default col-xs-5 col-xs-offset-2' %>
      </div>

      <div class="unsubscribe">
        <%= link_to "退会する", user_path(@user.id), method: :delete, "data-confirm" => "退会すると【お客様の情報が全て失われてしまいます】がよろしいですか？" %>
      </div>
    </div>
  </div>
</div>

