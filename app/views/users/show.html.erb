<div class="col-xs-3">
  <%= render 'layouts/header' %>
</div>

<div class="col-xs-9">

  <%# --ユーザーの名前-- %>
  <div class="user-name">
    <%= @user.last_name %><%= @user.first_name %>
  </div>

  <div class="sell-content">
    <div class="space">お買い物情報</div>
    <div class="line-box-pink"></div>

    <div class="space">お気に入り<div>

    <%# --お気に入り情報をここに記述-- %>
    <% @favorites.each do |item| %>
      <div class="user-favorite">
        <%= attachment_image_tag item, :image, format:'jpeg', fallback: "no_image.jpg", size: '150x150' %>
        <%= link_to "#{item.prodct_name}",item_path(item.id), style: "color: white;" %>
        <%= item.price %>円(税込)
      </div>
    <% end %>
  </div>

  <div class="sell-content">
    <div class="space">購入履歴</div>

    <%# --購入履歴をここに記述-- %>
  </div>

  <div class="sell-content">
    <div class="space">お客様情報</div>
    <div class="line-box-pink"></div>

    <%# --会員情報をここに記述-- %>
    <%# table-condensedは行間の狭いテーブルになる　小さいテーブル %>
    <table class="table-content table-condensed">
      <tr><%# thの横にtdがくる形式のtableの書き方 %>
        <th>氏名</th>
        <td><%= @user.last_name %><%= @user.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @user.last_kana_name %><%= @user.first_kana_name %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @user.prefecture %><%= @user.city_address %><%= @user.building %></td>
      </tr>
      <tr>
        <th>連絡先電話番号</th>
        <td><%= @user.tel_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>

    <div class="user-edit">
      <%= link_to "変更する", edit_user_path(@user.id), class:'btn btn-default' %>
      <%= link_to "住所一覧へ", user_addresses_path(@user.id), class:'btn btn-default' %>
    </div>
    <div class="unsubscribe">
      <%= link_to "退会する", user_path(@user.id), method: :delete, "data-confirm" => "退会すると【お客様の情報が全て失われてしまいます】がよろしいですか？" %>
    </div>
  </div>

</div>

