<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-9">

      <%# --ユーザーの名前-- %>
      <div class="user-name">
        <%= @user.last_name %><%= @user.first_name %>
      </div>

      <div class="sell-content">
        <div class="space">お買い物情報</div>
        <div class="line_box_pink"></div>

        <div class="space">お気に入り<div>

        <%# --お気に入り情報をここに記述-- %>
        <% @favorites.each do |item| %>
          <div class="user-favorite">
            <%= attachment_image_tag item, :image, format:'jpeg', fallback: "no_image.jpg", size: '150x150' %>
            <%= link_to "#{item.prodct_name}",item_path(item.id), style: "color: white;" %>
            <%= item.price %>円(税込)
          </div>
        <% end %>
      </div>

      <div class="sell-content">
        <div class="space">購入履歴</div>

        <%# --購入履歴をここに記述-- %>
        <% @orders.each do |order| %>
          <table class="table-date table-condensed">
            <tr>
              <th>▼<%= order.created_at.strftime('%Y/%m/%d') %>ご注文
              <%= link_to '(詳細へ)', order_path(order.id) %></th>
            </tr>
          </table>
          <table class="table-content table-condensed">
            <tr>
              <th>ご注文番号</th>
              <th>ご注文内容</th>
              <th>ご注文金額合計</th>
              <th>お支払方法</th>
              <th>配送状況</th>
            </tr>
            <tr>
              <td><%= order.order_number %></td>
              <td><%= order.order_items.first.with_deleted_item.title %>
              <% if order.amount_except_one != 0  %>ほか<%= order.amount_except_one %>点...<% end %></td>
              <td><%= order.purchase_price %></td>
              <td><%= order.payment %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          </table>
        <% end %>

        <%# != とは、等しくない という意味 %>

        <div class="user-edit">
          <%= link_to '購入履歴一覧へ', orders_path(@user_id), class:'btn btn-default col-xs-12' %>
        </div>
      </div>


      <div class="space">お客様情報</div>
      <div class="line_box_pink"></div>

      <%# --会員情報をここに記述-- %>
      <%# table-condensedは行間の狭いテーブルになる　小さいテーブル %>
      <table class="table-content table-bordered">
        <tr><%# thの横にtdがくる形式のtableの書き方 %>
          <th>氏名</th>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @user.last_kana_name %><%= @user.first_kana_name %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @user.prefecture %><%= @user.city_address %><%= @user.building %></td>
        </tr>
        <tr>
          <th>連絡先電話番号</th>
          <td><%= @user.tel_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>

      <div class="user-edit">
        <%= link_to "変更する", edit_user_path(@user.id), class:'btn btn-default col-xs-5' %>
        <%= link_to "住所一覧へ", addresses_path, class:'btn btn-default col-xs-5 col-xs-offset-2' %>
      </div>

      <div class="unsubscribe">
        <%= link_to "退会する", user_path(@user.id), method: :delete, "data-confirm" => "退会すると【お客様の情報が全て失われてしまいます】がよろしいですか？" %>
      </div>
    </div>
  </div>
</div>

