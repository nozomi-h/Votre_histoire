<h2 class="shop_name">Votre histoire</h2>
<div class="line_box"></div>

<div class="line_box_long"></div>
<div class="title">会員登録</div>
<div class="line_box_long"></div>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

      <h5 class="space">SNSから登録する</h5>
      <div class="line_box_pink"></div>

      <h5 class="space">お客様情報</h5>
      <div class="line_box_pink"></div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field">
          <p>氏名<span class="required">必須</span></p>
            <%= f.label :　姓　 %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :size => "30*30" %>
            <%= f.label :　名　 %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :size => "30*30" %>
        </div>

        <div class="field">
          <p>カナ<span class="required">必須</span></p>
            <%= f.label :　セイ %>
            <%= f.text_field :last_kana_name, autofocus: true, autocomplete: "last_kana_name", :size => "30*30" %>
            <%= f.label :　メイ %>
            <%= f.text_field :first_kana_name, autofocus: true, autocomplete: "first_kana_name", :size => "30*30" %>
        </div>

        <div class="field">
          <p>メールアドレス<span class="required">必須</span></p>
            <%= f.label :　 %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "70*70" %>
        </div>

        <div class="field">
          <p>連絡先電話番号<span class="required">必須</span></p>
            <%= f.label :　 %>
            <%= f.telephone_field :tel_number, autofocus: true, autocomplete: "tel_number", :size => "70*70" %>
        </div>

        <div class="field">
          <p>郵便番号<span class="required">必須</span></p>
            <%= f.label :　 %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :size => "30*30" %>
            <p>(半角英数) 例1000101  ※郵便番号がわからない場合は
            <%=link_to "こちら", "https://www.post.japanpost.jp/smt-zipcode/" %>
            </p>
        </div>

        <div class="field">
          <p>都道府県<span class="required">必須</span></p>
            <%= f.label :　 %>
            <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", :size => "70*70" %>
        </div>

        <div class="field">
          <p>市区町村・番地<span class="required">必須</span></p>
            <%= f.label :　 %>
            <%= f.text_field :city_address, autofocus: true, autocomplete: "city_address", :size => "70*70" %>
        </div>

        <div class="field">
          <p>マンション名　等</p>
            <%= f.label :　 %>
            <%= f.text_field :building, autofocus: true, autocomplete: "building", :size => "70*70" %>
        </div>


        <div class="field">
          <h5 class="space">その他情報</h5>
          <div class="line_box_login"></div>
        </div>

        <div class="field">
          <p>性別</p>
          <div class="field_box cp_sl01">
            <%= f.select :sex, [["女"], ["男"]], :prompt => "選択してください"%>
          </div>
        </div>


        <div class="field">
          <p>生年月日</p>
          <div class="field_box cp_sl01">
            <%= f.date_select :birth_day, autofocus: true, autocomplete: "birth_day", :size => "50*50" %>
          </div>
        </div>


        <h5 class="space">パスワード</h5>
        <div class="line_box_pink"></div>

        <div class="field">
          <h5 class="space">パスワード</h5>
          <div class="line_box_login"></div>
        </div>

        <div class="field">
          <%= f.label :パスワード %><span class="required">必須</span>
          <% if @minimum_password_length %>
          <%#<em>(<%= @minimum_password_length %> <%#characters minimum)</em> %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", :size => "70*70" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認） %><span class="required">必須</span><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "70*70" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", :class => "btn btn-primary col-xs-10 col-xs-offset-1 " %>
        </div>
      <% end %>
    </div>
  </div>
</div>
