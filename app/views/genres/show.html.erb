<div class="container">
  <div classs="row">

    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-9">
      <h3 style="color: #000000"><%= "#{@item.genre_id}" %></h3>
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, format:'jpeg', fallback: "no_image.jpg", size: "100x100", class: "image" %>
        <% end %>
        <%= link_to "#{item.prodct_name}",item_path(item.id), class: "link-text" %>
          <%= item.tax_include.round(0) %>円(税込)
      <% end %>
    </div>

  </div>
</div>
