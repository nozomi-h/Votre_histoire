<div class="container">
  <div classs="row">

    <div class="col-xs-3">
      <%= render 'layouts/header' %>
    </div>

    <div class="col-xs-9">
      <h3 class="genre"><%= "#{@item.genre_id}" %></h3>
      <% @items.each do |item| %>
        <div class="row" id="row5">
          <div class="item_index">
            <div class="aaa">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, format:'jpeg', fallback: "no_image.jpg", size: "100x100", class: "image" %>
              <% end %>
            </div>
            <div class="aaa">
              <p><%= link_to "#{item.prodct_name}",item_path(item.id), class: "link-text" %></p>
              <p><%= item.tax_include.round(0) %>円(税込)</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
