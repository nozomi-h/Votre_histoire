
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2 class="shop_name">Votre histoire</h2>

      <div class="title">CART</div>

      <% breadcrumb pretext: "CART: ", separator: " &rsaquo; " %>
      <% end %>

      <div class="sell-content">
        <table class="table-date">
          <tr>
            <th>ご注文商品</th>
          </tr>
        </table>

        <table class="table-content-block table-bordered width="100%"">
          <tr>
            <th>商品写真</th>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>削除</th>
            <th>小計</th>
          </tr>

          <% @carts.each do |cart, i| %>
            <tr>
              <td width="20%"><%= attachment_image_tag cart.item, :image, size: '100x100', fallback: 'no_image.jpg' %></td>
              <td width="40%"><%= cart.item.prodct_name %></td>
              <td width="10%"><%= cart.item.price %>円</td>
              <td width="10%"><%= form_for(:number, url: user_cart_path(current_user.id,cart.id), method: :PATCH) do |f| %>
                    <%= number_field :amount, name=i, value: cart.amount, min: "1", max: "99" %>
                  <% end %>
              </td>
              <td width="10%"><%= link_to "削除", cart_path(cart.id), method: :delete, "data-confirm" => "本当に削除しますか？", :class => 'btn btn-default' %></td>
              <% subtotal = cart.item.price * cart.amount %>
              <td width="10%"><%= subtotal.round(0) %>円</td>
            </tr>
          <% end %>

          <tr>
            <td colspan="5", style="text-align:right;">合計</td>
            <td><%#= current_user.cart_sum.round(0) %>円　(税込)</td>
          </tr>
        </table>
      </div>


      <div class="sell-content">
        <table class="table-date">
          <tr>
            <th>お届け先</th>
          </tr>
        </table>
      </div>


      <div class="sell-content">
      </div>
    </div>
  </div>
</div>
